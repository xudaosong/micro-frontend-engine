{
  "ignoreChanges": ["docs/**", "**/__tests/**", "**/*.md"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "init": {
      "independent": true,
      "exact": true,
      "registry": "https://registry.npm.taobao.org/"
    },
    "create": {
      "yes": false,
      "esModule": true
    },
    "add": {
      "exact": true
    },
    "clean": {
      "yes": true
    },
    "exec": {
      "concurrency": 1
    },
    "version": {
      "allowBranch": "master"
    },
    "publish": {
      "allowBranch": "master",
      "exact": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npm.taobao.org/"
    }
  },
  "packages": ["packages/*"]
}
